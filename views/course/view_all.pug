extends ../layout

block content
    div.courses

        h3 Courses
        a(href='/courses/add') Add New Course
        table
            thead
                tr
                    th Course Title
                    th Instructor
                    th Department
                    th Description
            tbody
                each course in courses
                    tr
                        td= course.name
                        td= course.instructor_name
                        td= course.department
                        td= course.description
                        td
                            a(href=`/courses/profile/${course.id}`) View Course